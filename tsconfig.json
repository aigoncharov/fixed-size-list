{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./dist",
    "target": "es2015",
    "baseUrl": "./",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./**/*.ts"]
}
